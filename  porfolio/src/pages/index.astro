---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro' // Ruta corregida
---

<Layout>
    <!-- Sección Hero -->
    <section class="py-16 text-center">
        <h1 class="text-4xl font-bold mb-4 text-gray-800 dark:text-white">Desarrollador Web Freelance</h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
            Creando aplicaciones web modernas y eficientes que brindan valor real
        </p>
    </section>

    <!-- Herramientas Favoritas -->
    <section class="py-12 max-w-4xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-8">My Favourite Tools</h2>
        
        <div class="space-y-8">
            <!-- Ruby on Rails -->
            <div class="p-6 bg-white dark:bg-gray-800 rounded-xl shadow-md">
                <h3 class="text-2xl font-semibold mb-3">Ruby on Rails</h3>
                <p class="text-gray-600 dark:text-gray-300">
                    My one stop solution for full-stack web development. Perfect balance between productivity and performance.
                </p>
            </div>
        </div>
    </section>

    <!-- Formulario de Contacto -->
    <section class="py-16 max-w-2xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-8">Contacto</h2>
        
        <div class="bg-white dark:bg-gray-800 p-8 rounded-xl shadow-md space-y-6">
            <!-- Nombre -->
            <div>
                <label class="block text-sm font-medium mb-2 text-gray-700 dark:text-gray-300">Nombre completo</label>
                <input type="text" class="w-full px-4 py-2 rounded-lg border dark:border-gray-700 dark:bg-gray-900">
            </div>

            <!-- Email -->
            <div>
                <label class="block text-sm font-medium mb-2 text-gray-700 dark:text-gray-300">Correo electrónico</label>
                <input type="email" class="w-full px-4 py-2 rounded-lg border dark:border-gray-700 dark:bg-gray-900">
            </div>

            <!-- Mensaje -->
            <div>
                <label class="block text-sm font-medium mb-2 text-gray-700 dark:text-gray-300">Mensaje</label>
                <textarea class="w-full px-4 py-2 rounded-lg border dark:border-gray-700 dark:bg-gray-900 h-32"></textarea>
            </div>

            <!-- Botón -->
            <button class="w-full bg-blue-600 text-white py-2 px-6 rounded-lg hover:bg-blue-700 transition-colors">
                Enviar mensaje
            </button>

            <!-- Contacto directo -->
            <div class="text-center text-sm text-gray-600 dark:text-gray-400">
                <p>Contacto directo: 
                    <a href="mailto:dani@danirod.es" class="text-blue-500 hover:underline">dani@danirod.es</a>
                </p>
            </div>
        </div>
    </section>
</Layout>