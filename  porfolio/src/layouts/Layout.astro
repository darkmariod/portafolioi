---
import { unocss } from 'unocss/runtime'
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dani Rodríguez | Desarrollador Web</title>
    <style>{unocss}</style>
</head>
<body class="font-sans bg-gray-50 dark:bg-gray-900 text-gray-800 dark:text-gray-100">
    <main class="container mx-auto px-4 max-w-4xl">
        <!-- Hero Section -->
        <section class="py-16 text-center">
            <h1 class="text-4xl font-bold mb-4">Desarrollador Web Freelance</h1>
            <p class="text-xl text-gray-600 dark:text-gray-300">
                Creando aplicaciones web modernas y eficientes que brindan valor real
            </p>
        </section>

        <!-- Herramientas -->
        <section class="py-8">
            <h2 class="text-3xl font-bold mb-8 text-center">My Favourite Tools</h2>
            
            <div class="grid gap-8 md:grid-cols-2">
                <div class="p-6 bg-white dark:bg-gray-800 rounded-xl shadow">
                    <h3 class="text-2xl font-semibold mb-3">Ruby on Rails</h3>
                    <p class="text-gray-600 dark:text-gray-300">
                        My one stop solution for full-stack web development. Perfect balance between productivity and performance.
                    </p>
                </div>
                
                <!-- Agrega más herramientas aquí -->
            </div>
        </section>

        <!-- Contacto -->
        <section class="py-16">
            <h2 class="text-3xl font-bold mb-8 text-center">Contacto</h2>
            
            <div class="max-w-md mx-auto space-y-6">
                <div class="space-y-2">
                    <label class="block text-sm font-medium">Nombre completo</label>
                    <input type="text" class="w-full px-4 py-2 rounded border dark:border-gray-700 dark:bg-gray-800">
                </div>
                
                <div class="space-y-2">
                    <label class="block text-sm font-medium">Correo electrónico</label>
                    <input type="email" class="w-full px-4 py-2 rounded border dark:border-gray-700 dark:bg-gray-800">
                </div>
                
                <div class="space-y-2">
                    <label class="block text-sm font-medium">Mensaje</label>
                    <textarea class="w-full px-4 py-2 rounded border dark:border-gray-700 dark:bg-gray-800 h-32"></textarea>
                </div>
                
                <div class="text-center">
                    <button class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">
                        Enviar mensaje
                    </button>
                </div>
                
                <div class="text-center text-sm text-gray-600 dark:text-gray-400">
                    <p>Contacto directo: 
                        <a href="mailto:dani@danirod.es" class="text-blue-500 hover:underline">dani@danirod.es</a>
                    </p>
                </div>
            </div>
        </section>
    </main>
</body>
</html>