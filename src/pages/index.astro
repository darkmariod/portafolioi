---
import Layout from '../layouts/Layout.astro';

// Datos para la secci칩n de Services
const services = [
  {
    title: "Web Development",
    description: "Build websites, blogs, e-commerce platforms, or SaaS applications from design to deployment. I provide both backend and frontend support.",
  },
  {
    title: "Progressive Apps",
    description: "Create Progressive Web Applications (PWAs) that mimic native apps with features like home screen shortcuts, fullscreen mode, and notifications.",
  },
];

// Datos para la secci칩n de My Favourite Tools
const tools = [
  {
    title: "Ruby on Rails",
    description: "My go-to solution for new projects. It makes iterating quick and easy, allowing me to deliver results faster.",
  },
  {
    title: "NodeJS",
    description: "Perfect for quick backend prototypes and projects focused on interaction flows or data exchange.",
  },
  {
    title: "Python",
    description: "A versatile programming language widely used for web development, data analysis, artificial intelligence, and more.",
  },
  {
    title: "Go",
    description: "A fast and efficient programming language ideal for building scalable and high-performance applications.",
  },
];
---

<Layout>
  <!-- Hero Section -->
  <section class="bg-gray-50 dark:bg-gray-800 py-16">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-6xl font-bold text-gray-900 dark:text-white mb-6">
        Mario Pazmi침o
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
        I am a backend web developer based in Ecuador, feel free to get in touch.
      </p>
      <div class="flex justify-center gap-4">
        <a href="/portfolio" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
          View Portfolio
        </a>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="bg-white dark:bg-gray-900 py-16">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">Services</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          services.map((service) => (
            <div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg shadow-lg">
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">{service.title}</h3>
              <p class="text-gray-600 dark:text-gray-300">{service.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- My Favourite Tools Section -->
  <section class="bg-gray-50 dark:bg-gray-800 py-16">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">My Favourite Tools</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          tools.map((tool) => (
            <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-lg">
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">{tool.title}</h3>
              <p class="text-gray-600 dark:text-gray-300">{tool.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="bg-white dark:bg-gray-900 py-16">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Contact Me</h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
        Feel free to reach out if you have any questions or just want to say hi!
      </p>
      <a href="/contact" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
        Get in Touch
      </a>
    </div>
  </section>

  <!-- Footer Section -->
  <footer class="bg-gray-800 dark:bg-gray-900 py-8">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <p class="text-gray-300 dark:text-gray-400">
        &copy; 2025 Mario Pazmi침o. All rights reserved.
      </p>
      <div class="mt-4 flex justify-center space-x-4">
        <a href="https://twitter.com/yourprofile" class="text-gray-300 hover:text-blue-400 transition-colors" target="_blank" rel="noopener noreferrer">
          Twitter
        </a>
        <a href="https://github.com/yourprofile" class="text-gray-300 hover:text-blue-400 transition-colors" target="_blank" rel="noopener noreferrer">
          GitHub
        </a>
        <a href="https://linkedin.com/in/yourprofile" class="text-gray-300 hover:text-blue-400 transition-colors" target="_blank" rel="noopener noreferrer">
          LinkedIn
        </a>
      </div>
    </div>
  </footer>
</Layout>